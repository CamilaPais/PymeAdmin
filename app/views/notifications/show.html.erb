<div class="container-fluid">
	<div class="row">
		<div class="col-6">
			<%= render 'shared/notice', notice: notice %>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-6">
			<div class="card border-primary mb-3" style="max-width: 20rem;">
			  <div class="card-header"><h4><%= @notification.title %></h4></div>
			  <div class="card-body">
			    <p class="card-text"><%= @notification.text %></p>
			    <p class="card-text"><%= I18n.t('activerecord.attributes.notifications.due_date') %>:
			    	<%= I18n.l(@notification.due_date, format: :short) %></p>
			    <p class="card-text"><%= I18n.t('activerecord.attributes.notifications.done')%> <%=checkbox(@notification.done) %></p>
			  </div>
			</div>
		</div>
	</div>

	<div class="row mb-2">
		<div class="col-2">
			<button type="button" class="btn btn-outline-success" >
				<%= link_to I18n.t('helpers.buttons.edit'), edit_notification_path(@notification) %>
			</button>
		</div>
		<div class="col-2">
			<button type="button" class="btn btn-outline-primary" >
				<%= link_to I18n.t('helpers.buttons.back'), notifications_path %>
			</button>
		</div>
	</div>

</div>
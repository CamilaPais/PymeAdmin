<div class="field">
	<%= form.fields_for :inflow_items do |builder| %>
	  <fieldset>
	    <%= builder.label "Inflow items" %> <br />
	    <%= builder.label :quantity, "Quantity" %> <br />
	    <%= builder.number_field :quantity %> <br / >
	    <%= builder.label :product_id, "Product" %> <br />
	    <%= builder.number_field :product_id %> <br / >
	    <% link_to "Remove item", '#', class: 'remove_items' %>
	    <% builder.hidden_field :_destroy %>
	  </fieldset>
	<% end %>
</div>
<%= form_for(outflow) do |f| %>
  <% if outflow.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(outflow.errors.count, "error") %> prohibited this outflow from being saved:</h2>

      <ul>
      <% outflow.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fields">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
    <%= f.label :cash %>
    <%= f.check_box :cash %>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
    <%= f.label :supplier_id, "Supplier" %>
    <%= f.number_field :supplier_id %>
  </div>

   <%= f.fields_for :outflow_items do |builder| %>
    <%= render "outflows/outflow_items/outflow_items_fields", :builder => builder %>
  <% end %>

  <p><%= link_to_add_fields "Add Outflow item", f, :outflow_items %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

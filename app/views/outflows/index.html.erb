<p id="notice"><%= notice %></p>

<h1><%= I18n.t('activerecord.models.outflow.other') %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('activerecord.attributes.outflows.total') %></th>
      <th><%= I18n.t('activerecord.attributes.outflows.paid') %></th>
      <th><%= I18n.t('activerecord.attributes.outflows.cash') %></th>
      <th><%= I18n.t('activerecord.attributes.outflows.notes') %></th>
      <th><%= I18n.t('activerecord.attributes.outflows.supplier_id') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outflows.each do |outflow| %>
      <tr>
        <td><%= outflow.total %></td>
        <td><%= outflow.paid %></td>
        <td><%= outflow.cash %></td>
        <td><%= outflow.notes %></td>
        <td><%= outflow.supplier.name %></td>
        <td><%= link_to I18n.t('helpers.buttons.show'), outflow %></td>
        <td><%= link_to I18n.t('helpers.buttons.edit'), edit_outflow_path(outflow) %></td>
        <td><%= link_to I18n.t('helpers.buttons.destroy'), outflow, method: :delete, data: { confirm: I18n.t('helpers.buttons.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('helpers.links.new_outflow'), new_outflow_path %>

<div class="container-fluid">
  <div class="row mt-2 mb-1">
    <h2><%= I18n.t('devise.views.login') %></h2>
  </div>

  <div class="row">
    <div class="col-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :username, required: false %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <div class="form-actions">
        <%= f.button :submit, I18n.t('devise.views.login') %>
      </div>
      <% end %>
    </div>
    <div class="col-3">
      <button type="button" class="btn btn-outline-primary">
        <%= link_to I18n.t('devise.views.forgot_password'), new_password_path(resource_name) %>
      </button>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-6">
      <%= I18n.t('devise.views.register') %>
      <button type="button" class="btn btn-outline-primary">
        <%= link_to I18n.t('devise.views.sign_up'), new_registration_path(resource_name) %>
      </button>
    </div>
  </div>
</div>
<h1><%= I18n.t('views.headers.pages.statistics.title') %></h1>

<div>
	<h2><%= I18n.t('views.headers.pages.statistics.gross_income') %></h2>
	<h3>$<%= @statistics[:gross_income] %></h3>
	<table>
		<thead>
			<tr>
				<th><%= I18n.t('activerecord.models.product.one') %></th>
				<th><%= I18n.t('views.headers.pages.statistics.quantity') %></th>
				<th><%= I18n.t('views.headers.pages.statistics.total') %></th>
				<th><%= I18n.t('views.headers.pages.statistics.percentage') %></th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td><%= product.units_sold %></td>
					<td>$<%= product.sales_total %></td>
					<td><%= percent_of(product.sales_total, @statistics[:gross_income]).round(2) %>%</td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>

<div>
	<h2><%= I18n.t('views.headers.pages.statistics.total_expenses') %></h2>
	<h3>$<%= @statistics[:total_expenses] %></h3>
</div>

<div>
	<h2><%= I18n.t('views.headers.pages.statistics.total_cogs') %></h2>
	<h3>$<%= total_cogs(@statistics[:consumables]) %></h3>

	<table>
		<thead>
			<tr>
				<th><%= I18n.t('activerecord.models.supply.one') %></th>
				<th><%= I18n.t('views.headers.pages.statistics.quantity') %></th>
				<th><%= I18n.t('views.headers.pages.statistics.total') %></th>
				<th><%= I18n.t('views.headers.pages.statistics.percentage') %></th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @statistics[:consumables].each do |consumable| %>
				<tr>
					<td><%= consumable.name %></td>
					<td><%= consumable.units_bought %></td>
					<td>$<%= consumable_total(consumable) %></td>
					<td><%= percent_of(consumable_total(consumable), total_cogs(@statistics[:consumables])).round(2) %>%</td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>

<div>
	<h2><%= I18n.t('views.headers.pages.statistics.total_operative_expenses') %></h2>
	<h3>$<%= total_operative_expenses(@statistics[:operative_expenses]) %></h3>
</div>

<div>
	<h2><%= I18n.t('views.headers.pages.statistics.exp_per_supplier') %></h2>
</div>

<div>
	<table>
		<thead>
			<tr>
				<th><%= I18n.t('activerecord.models.supplier.one') %></th>
				<th><%= I18n.t('activerecord.attributes.outflows.total') %></th>
				<th><%= I18n.t('views.headers.pages.statistics.percentage') %></th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @suppliers.each do |supplier| %>
				<% supplier_total = supplier.outflows.sum('total') %>
				<tr>
					<td><%= supplier.name %></td>
					<td>$<%= supplier_total %></td>
					<td><%= percent_of(supplier_total, @statistics[:total_expenses]).round(2) %>%</td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>

<div>
	<h2><%= I18n.t('views.headers.pages.statistics.balance') %></h2>
	<h3>$<%= @statistics[:balance] %></h3>
</div>
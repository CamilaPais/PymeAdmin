<div class= 'container-fluid'>
  <%= render 'shared/notice', notice: notice %>

  <div class="row">
    <h1><%= I18n.t('activerecord.models.supply_product_link.other') %></h1>
  </div>
  <br>

  <div class="row">
    <button type='button' class="btn btn-primary btn-lg">
      <%= link_to I18n.t('helpers.links.new_supply_product_link'), new_supply_product_link_path, class: 'white-text' %>
    </button>
  </div>

  <div class="row">
    <div class= 'col-md-6'>
      <table>
        <thead>
          <tr>
            <th><%= I18n.t('activerecord.attributes.supply_product_links.product_id') %></th>
            <th><%= I18n.t('activerecord.attributes.supply_product_links.supply_id') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @supply_product_links.each do |supply_product_link| %>
            <tr>
              <td><%= Product.find(supply_product_link.product_id).name %></td>
              <td><%= Product.find(supply_product_link.supply_id).name %></td>
              <td>
                <button type="button" class="btn btn-danger btn-sm">
                  <%= link_to I18n.t('helpers.buttons.destroy'), supply_product_link, class: 'white-text',
                  method: :delete, data: { confirm: I18n.t('helpers.buttons.are_you_sure') } %>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

</div>
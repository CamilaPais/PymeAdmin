<%= simple_form_for(@product, html: { class: 'form-vertical' }) do |f| %>
	<div class="row">
		<div class="col-4">
			<%= f.error_notification %>
			<%= f.input :name  %>
			<%= f.input :price %>
			<%= f.input :unit %>
			<%= f.input :stock %>
			<%= f.button :submit, class: "btn-primary" %>
		</div>
	</div>
<% end %>
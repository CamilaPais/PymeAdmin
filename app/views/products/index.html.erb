<p id="notice"><%= notice %></p>

<h1><%= I18n.t('activerecord.models.product.other') %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('activerecord.attributes.products.name') %></th>
      <th><%= I18n.t('activerecord.attributes.products.price') %></th>
<!--       <th><%= I18n.t('activerecord.attributes.products.promotion_price') %></th> -->
      <th><%= I18n.t('activerecord.attributes.products.unit') %></th>
      <th><%= I18n.t('activerecord.attributes.products.stock') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.order(name: :asc).each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
<!--    <td><%= product.promotion_price %></td> -->
        <td><%= product.unit %></td>
        <td><%= product.stock %></td>
        <td><%= link_to I18n.t('helpers.buttons.show'), product %></td>
        <td><%= link_to I18n.t('helpers.buttons.edit'), edit_product_path(product) %></td>
        <td><%= link_to I18n.t('helpers.buttons.destroy'), product, method: :delete, data: { confirm: I18n.t('helpers.buttons.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('helpers.links.new_product'), new_product_path %>

<p id="notice"><%= notice %></p>

<h1><%= I18n.t('activerecord.models.supplier.other') %></h1>

<table>
  <thead>
    <tr>
      <th> ID </th>
      <th><%= I18n.t('activerecord.attributes.suppliers.name') %></th>
      <th><%= I18n.t('activerecord.attributes.suppliers.phone_number') %></th>
      <th><%= I18n.t('activerecord.attributes.suppliers.account_balance') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.order(name: :asc).each do |supplier| %>
      <tr>
        <td><%= supplier.id %></td>
        <td><%= supplier.name %></td>
        <td><%= supplier.phone_number %></td>
        <td><%= supplier.account_balance %></td>
        <td><%= link_to I18n.t('helpers.buttons.show'), supplier %></td>
        <td><%= link_to I18n.t('helpers.buttons.edit'), edit_supplier_path(supplier) %></td>
        <td><%= link_to I18n.t('helpers.buttons.destroy'), supplier, method: :delete, data: { confirm: I18n.t('helpers.buttons.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('helpers.links.new_supplier') , new_supplier_path %>
